@using TableTennis.Models
@model TableTennis.ViewModels.PlayerDetailsViewModel

@{
    ViewBag.Title = @Model.Player.Username;
}

<h2>Player details</h2>

<fieldset>
    <div class="display-label">
         @Html.DisplayNameFor(model => model.Player.Username)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Player.Username)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Player.Email)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Player.Email)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Player.Rating)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Player.Rating)
    </div>

    <div class="display-field">
         <img src="@Html.Gravatar(Model.Player.GravatarEmail)" width="64" height="64" />
    </div>
</fieldset>

<table>
    <tr>
        <td>
            Time
        </td>
        <td>
            Opponent
        </td>
        <td>
            Rating
        </td>
        <td>
            Result
        </td>
    </tr>
    @foreach (var p in Model.PlayedGamesViewModel.GameList)
    {
        <tr>
            <td>
                @p.TimeStamp
            </td>
            <td>
                @p.Opponent
            </td>
            <td>
                @p.Rating
            </td>
            <td>
                @p.Won
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Back to List", "PlayerList")
</p>
