@using TableTennis.Models
@model TableTennis.ViewModels.LastGamesViewModel

@{
    ViewBag.Title = "Last Games at " + HttpContext.Current.User.Identity.Name;
}

@Html.ActionLink("Home", "Index", "Home")

<br>

@foreach (PlayedGame game in Model.PlayedGames)
{
    @game.TimeStamp
    <br/>
    switch (game.Players.Count)
    {
        case 2:
            @Html.Display(game.Players[0])
            @Html.Label(" - ")
            @Html.Display(game.Players[1])
            break;
        case 4:
            @Html.Display(game.Players[0])
            @Html.Display(game.Players[1])
            @Html.Display(game.Players[3])
            @Html.Display(game.Players[4])
            break;
    }
    <br/>
    foreach (GameSet set in game.GameSets)
    {
        <b>
            @Html.Display(set.Score1.ToString())
            @Html.Label(" - ")
            @Html.Display(set.Score2.ToString())
        </b>
        <br/>
    }
    <br/>
}